{
    "version": "0.2.0",
    "configurations": [{
        "name": "Launch Locally",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceRoot}/cmd/manager/",
        "env": {
            "POD_NAMESPACE": "default"
        },
        "args": [
            "--kubeconfig",
            "${env:HOME}/.kube/config"
        ]
    }]
}